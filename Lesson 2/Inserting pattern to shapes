<!-- Source code to create textured object, change scale to -1 1 1 for see-through room -->

            <a-box color="#FFFFFF"
                   src="#metal"
                   repeat="1 1"
                   normal-map="#metal-NRM"
                   normal-texture-repeat="1 1"
                   normal-scale="1 -1"
                   roughness="0.5"
                   width="4" height="4" depth="4"
                   position="-2 1.5 -9"
                   scale="-1 1 1">
            </a-box>
           
           
 <!-- -----------------------==OR==-------------------- -->          
           
           
            <a-entity geometry ="primitive: box; 
                                  width: 4; 
                                  height: 4; 
                                  depth: 4"
                      material="color: #FFFFFF;
                                src: #brick;
                                repeat: 2 2;
                                normal-map: #brick-NRM;
                                normal-texture-repeat: 2 2;
                                 normal-scale: 1 -1;
                                 roughness: 0.9"
                   position="2 1.5 -9"
                   scale="-1 1 1">
            </a-entity>
